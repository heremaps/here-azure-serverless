
{
  "parameters": {
    "hereAPP_ID": {
      "type": "string",
      "metadata": {
        "description": "For HERE Credentials, refer https://developer.here.com"
      }
    },
    "hereAPP_CODE": {
      "type": "string",
      "metadata": {
        "description": "For HERE Credentials, refer https://developer.here.com"
      }
    },

    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "storageName": {
      "type": "string",
      "defaultValue": "[concat('storage', uniqueString(resourceGroup().id))]"
    },
    "appName": {
      "type": "string",
      "defaultValue": "[concat('app', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Globally Unique app_name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "msdeployPackageUrl": {
      "type": "string",
      "metadata": {
        "description": "Public accessible URL for Zip containing function code."
      },
      "defaultValue": "http://<...>/hlsAPIGeocoder.zip"
    }
  },
  "variables": {
    "offerType": "Standard"
  },
  "resources": [{
      "apiVersion": "2016-08-01",
      "name": "[parameters('appName')]",
      "type": "Microsoft.Web/sites",
      "properties": {
        "name": "[parameters('appName')]",
        "siteConfig": {
          "cors": {
            "allowedOrigins": ["*"]
          },
          "appSettings": [{
              "name": "AzureWebJobsDashboard",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2015-05-01-preview').key1)]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2015-05-01-preview').key1)]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')), '2015-05-01-preview').key1)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[concat(toLower(parameters('appName')))]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "8.11.1"
            },
            {
              "name": "HERE_APP_CODE",
              "value": "[parameters('hereAPP_CODE')]"
            },
            {
              "name": "HERE_APP_ID",
              "value": "[parameters('hereAPP_ID')]"
            }
          ]
        },
        "clientAffinityEnabled": false
      },
      "resources": [{
        "name": "MSDeploy",
        "type": "extensions",
        "apiVersion": "2015-08-01",
        "dependsOn": [
          "[resourceId('Microsoft.Web/Sites', parameters('appName'))]"
        ],
        "properties": {
          "packageUri": "[parameters('msdeployPackageUrl')]"
        }
      }],
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageName'))]"
      ],
      "location": "[parameters('location')]",
      "kind": "functionapp"
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageName')]",
      "location": "[parameters('location')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    }
  ],
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0"
}

